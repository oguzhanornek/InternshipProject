<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_graph"
    app:startDestination="@id/kullanicilarFragment">

    <fragment
        android:id="@+id/kullanicilarFragment"
        android:name="com.oguzornek.internshipproject.view.KullanicilarFragment"
        android:label="kullanicilarFragment">
        <action
            android:id="@+id/action_kullanicilarFragment_to_userChooseFragment"
            app:destination="@id/userChooseFragment" />
    </fragment>
    <fragment
        android:id="@+id/userChooseFragment"
        android:name="com.oguzornek.internshipproject.view.UserChooseFragment"
        android:label="userChooseFragment">
        <action
            android:id="@+id/action_userChooseFragment_to_kullanicilarFragment"
            app:destination="@id/kullanicilarFragment" />
        <action
            android:id="@+id/action_userChooseFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
        <action
            android:id="@+id/action_userChooseFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumFragment"
        android:name="com.oguzornek.internshipproject.view.AlbumFragment"
        android:label="AlbumFragment" />
    <fragment
        android:id="@+id/postFragment"
        android:name="com.oguzornek.internshipproject.view.PostFragment"
        android:label="PostFragment" />
</navigation>